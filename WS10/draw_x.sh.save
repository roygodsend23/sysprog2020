#!/bin/bash

p=9;
for (( i=1 ; i<=p/2 ; i++))
do
	for ((j=1; j<i ; j++))
	do
		echo -n " "
	done
	echo -n "X "
	for((j=1; j<= p-(i*2); j++))
	do
		echo -n " "
	done
	echo -n "X "
	for((j=1; j<i; j++))
	do
		echo -n " "
	done
	echo
done


for((j=1;j=i;j++))
do
	echo -n " "
done
echo -n "X"
for((j=1; j<=i;j++))
do
        echo -n " "
done
echo
       
for(( i=p/2; i>=1; i--))
do
	for((j=i;j>1;j--))
	do
		echo -n " "
	done
	echo -n "X "
	for((j=p-(i*2);j>=1;j--))
	do
		echo -n " "
	done
	echo -n "X "
	for((j=i; j>1;j--))
	do
		echo -n " "
	done
	echo
done

